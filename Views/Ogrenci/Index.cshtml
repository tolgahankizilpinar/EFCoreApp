@model IEnumerable<Ogrenci>

<h2 class="text-center">Öğrenci Listesi</h2>

<a href="/Ogrenci/Create" class="btn btn-primary">Öğrenci Ekle</a>

<table class="table table-bordered my-3">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgrenciId)</th>
            <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ogr in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => ogr.OgrenciId)</td>
                <td>@Html.DisplayFor(m => ogr.OgrenciAd)</td>
                <td>@Html.DisplayFor(m => ogr.OgrenciSoyad)</td>
                <td>
                    <a href="" class="btn btn-sm btn-primary">Details</a>
                    <a href="" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>