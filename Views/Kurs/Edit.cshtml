@model KursViewModel

<h2 class="text-center">Kurs Güncelleme</h2>

<div class="row">
    <div class="col-8">
        <form asp-controller="Kurs" asp-action="Edit" method="post">
             <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="KursId">
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label"></label>
                <input asp-for="Baslik" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4 class="text-center">Öğrenciler</h4>
        <hr>
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>
