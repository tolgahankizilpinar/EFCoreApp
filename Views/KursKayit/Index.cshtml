@model IEnumerable<KursKayit>

<h2 class="text-center">Öğrenci Listesi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.KayitId)</th>
            <th>@Html.DisplayNameFor(m => m.Ogrenci.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.KayitId)</td>
                <td>@Html.DisplayFor(x => item.Ogrenci.OgrenciAd)</td>
                <td>@Html.DisplayFor(x => item.Kurs.Baslik)</td>
                <td>
                    <a asp-controller="KursKayit" asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>